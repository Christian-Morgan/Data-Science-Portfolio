library(forecast)
library(ggplot2)
# Create dataframe
df <- read.csv("C:/Users/Public/Downloads/Online Sales Data.csv")

# Look at data
head(df)

tail(df)

# View in tabular form
View(df)

# Check dimensions
dim(df)

# Check datatypes of each column
str(df)

# Check row names
row.names(df)

Y <- ts(df[,6],start=c(2024,01),frequency=12)

autoplot(Y) +
  ggtitle("Time Plot: Revenue Over Time") +
  ylab("US Dollars")


# See summary statistics
summary(df)

x <- as.Date(df$Date)
head(x)
class(x)
str(x)

# Create year, month, day columns
year <- as.numeric(format(x,'%Y'))
month <- as.numeric(format(x,'%m'))
day <- as.numeric(format(x,'%d'))

# Combine columns to dataframe
df <- cbind(df,year,month,day)

df$Date <- as.Date(df$Date, format="%Y-%m-%d")
Date_ts = ts(df$Date, start = c(2024, 1), end = c(2024,31), frequency = 12)

plot(Date_ts)
acf(Date_ts)

avg_model = Arima(Date_ts, c(0,0,0))
str(avg_model)

avg_forecast = forecast(avg_model)
str(avg_forecast)
avg_forecast$mean

plot()
